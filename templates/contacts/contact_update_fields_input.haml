%label.control-label
  {{contact_field.get_value_type_display}} Value
.controls
	-if contact_field
		%input{ name:'field_value', type:'text', value:'{%if value %}{{value}}{%endif%}' }
	-else
		%input{ name:'field_value',	type:'text', disabled:'disabled' }

:javascript

  // aggressively grab focus when we load
  var ele = $('input[name="field_value"]');
  ele.focus();

  // bit of a hack here, we want to force our cursor to the end
  var val = ele.val();
  ele.val('');
  ele.val(val);

  // re-enable our submission
  $('.modal-footer .btn').attr('disabled', false);
  $('.modal .loader-circles').hide();
